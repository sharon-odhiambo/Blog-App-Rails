<h1><%= @user.name %>'s Most Recent Posts</h1>
<div class="post">
<img src= "<%= @user.photo %>" />
<div class="name">
<p><%= @user.name %></p>
<p class="count">Number of Posts: <%= @user.posts_counter %></p>
</div>
</div>
<div class="user-bio"><p> Bio: </p>
<p> <%= @user.bio %> </p>
</div>
<ul><% @user.most_recent_posts.each do |post| %>
    <li class="post-text">
    <p>Post :<%= post.id %></p>
    <p><%= post.text %></p>
    <p class="post-com">
    <span>Comments: <%= post.comments_counter %></span>, 
    <span>Likes: <%= post.likes_counter %></span>
    </p>
    </li>
<% end %>
</ul>
<%= link_to user_posts_path(@user) do %>
<button>See all Posts </button>
<% end %>